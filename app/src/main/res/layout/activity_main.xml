<?xml version="1.0" encoding="utf-8"?>
<GridLayout xlmns:android="https://schemas.android.com/apk.res.andoid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xlmns="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="4"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:id="@+id/button33"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="5"
        android:layout_column="0"
        android:clickable="false"
        android:fontFamily="monospace"
        android:text="%"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button32"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="5"
        android:layout_column="2"
        android:clickable="false"
        android:fontFamily="monospace"
        android:text=","
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonEqual"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="126dp"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:fontFamily="monospace"
        android:text="="
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button32"
        app:layout_constraintTop_toBottomOf="@+id/buttonSum" />

    <Button
        android:id="@+id/button0"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="5"
        android:layout_column="1"
        android:fontFamily="monospace"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button32"
        app:layout_constraintStart_toEndOf="@+id/button33"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button1"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="4"
        android:layout_column="0"
        android:fontFamily="monospace"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="4"
        android:layout_column="2"
        android:fontFamily="monospace"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="4"
        android:layout_column="1"
        android:fontFamily="monospace"
        android:text="2"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/buttonSum"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="3"
        android:layout_column="3"
        android:fontFamily="monospace"
        android:text="+"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/buttonMinus"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="2"
        android:layout_column="3"
        android:fontFamily="monospace"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonClearOne" />

    <Button
        android:id="@+id/buttonClearOne"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="1"
        android:layout_column="3"
        android:fontFamily="monospace"
        android:text="clOne"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMulti"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonClear"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="1"
        android:layout_column="0"
        android:fontFamily="monospace"
        android:text="C"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonDivide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonMulti"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="1"
        android:layout_column="2"
        android:fontFamily="monospace"
        android:text="x"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonClearOne"
        app:layout_constraintStart_toEndOf="@+id/buttonDivide"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClearOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="3"
        android:layout_column="1"
        android:fontFamily="monospace"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="2"
        android:layout_column="1"
        android:fontFamily="monospace"
        android:text="8"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="3"
        android:layout_column="0"
        android:fontFamily="monospace"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="2"
        android:layout_column="2"
        android:fontFamily="monospace"
        android:text="9"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonMulti" />

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="3"
        android:layout_column="2"
        android:fontFamily="monospace"
        android:text="6"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSum"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonDivide"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="1"
        android:layout_column="1"
        android:fontFamily="monospace"
        android:text="/"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonMulti"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_row="2"
        android:layout_column="0"
        android:fontFamily="monospace"
        android:text="7"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />
    </GridLayout>