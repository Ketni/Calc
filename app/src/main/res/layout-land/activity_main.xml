<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <GridLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:columnCount="7"
            android:rowCount="6">

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="7"
                android:layout_rowWeight="3"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonOpen"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="("
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonClose"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text=")"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPow0"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1/x"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonClear"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="/"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMulti"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="*"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonClearOne"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="⌫"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPow2"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="х²"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPow3"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="x³"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPowY"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="x^y"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button7"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button9"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMinus"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonFact"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="х!"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="√"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSin"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="sin"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button5"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSum"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonCos"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="cos"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonTan"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="tan"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonCtg"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="ctg"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button1"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonEqual"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:text="="
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPi"
                style="@android:style/Widget.Button"
                android:fontFamily="monospace"
                android:layout_columnWeight="1"
                android:layout_columnSpan="3"
                android:layout_rowWeight="1"
                android:text="π"
                android:textSize="18sp" />


            <Button
                android:id="@+id/button33"
                style="@android:style/Widget.Button"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:clickable="false"
                android:fontFamily="monospace"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button0"
                style="@android:style/Widget.Button"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:fontFamily="monospace"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button32"
                style="@android:style/Widget.Button"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:fontFamily="monospace"
                android:text=","
                android:textSize="18sp" />



        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>